<section>
  <h3>Create New Post</h3>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
      <button type="submit" class="btn">Create</button>
    </div>
    <div>
      <label for="post-text">Description</label>
      <textarea type="text" id="post-text" name="post-text"></textarea>
      {{! <input type="text" id="post-text" name="post-text" /> }}
    </div>
  </form>
</section>

{{#if posts.length}}
  <section>
    <h3>Your Posts</h3>
    <ol>
      {{#each posts as |post|}}
        <li>
          {{!-- {{> post-info post}} --}}
          <article class="post">
            <div class="title">
              <h3>{{title}}</h3>
              <h5>(Posted by
                {{user.username}}
                on
                {{format_date created_at}})</h5>
            </div>
            <div>
              <p>{{post_text}}</p>
            </div>
            <div class="meta">
              <a href="/post/{{id}}">{{comments.length}}
                {{format_plural "comment" comments.length}}</a>
              <a href="/dashboard/edit/{{post.id}}" class="edit-link"><button>Edit</button></a>
            </div>
          </article>
        </li>
      {{/each}}
    </ol>
  </section>
{{/if}}

<script src="/javascript/add-post.js"></script>