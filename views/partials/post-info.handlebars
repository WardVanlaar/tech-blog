<article class="post">
  <div class="title">
    <h1>{{title}}</h1>
  </div>
  <div>
    {{#if './dasboard'}}
    <h4>Created on {{format_date created_at}}</h4>
    {{else}}
    <h4>Created by {{user.username}} on {{format_date created_at}}</h4>
    {{/if}}
  </div>
  <div>
    <p>{{post_text}}</p>
  </div>
  <div class="meta">
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>



